<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Melodika</title>
    <link rel="stylesheet" href="style/style.css">
    <script src="script/script.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800">
</head>
<body>
    <%
        let arquivo = {"imagem":"imagens/perfil/userico.svg"}

        if(autenticado.img_perfil_pasta != null){
            arquivo.imagem = autenticado.img_perfil_pasta
        }
    %>
    <header id="header">

        <section>
            <a href="/">
                <img src="imagens/logo.svg" alt="Logo">
            </a>
        </section>
    
        <%if (autenticado.id){%>
            <section id="abrenav" onclick="nav()">
                <img id="imgnav" src="<%= arquivo.imagem %>" alt="Menu">    
            </section>
        <% } else { %>
            <section id="abrenav">
                <a href="/login"><img id="imgnav" src="<%= arquivo.imagem %>" alt="Menu"></a>
            </section>
        <%}%>

        <nav id="nav">
            <%
            if(autenticado.tipo == '2'){
            %>
            <a href="/adm" class="adm">Painel administrativo</a>
            <%    
            }
            %>
            <a href="/perfil">Perfil</a>
            <a href="/chats">Chats</a>
            <a href="/perfil">Meus Cursos</a>
            <a href="/cadastrocurso">Cadastrar Curso</a>
            <a href="/filtro">Procurar Curso</a>
            <a class="sair" href="/sair">Sair</a>
            <a class="excluir" href="/excluir">Excluir Perfil</a>
        </nav>

    </header>
    <main>
        <section id="cadperfil">
            <h1>Perfil</h1>
            <form method="post" id="edperfil" action="/cadperfil" enctype="multipart/form-data"> 
                <input type="file" id="fotoperfil" name="fotoperfil" style="display:none" onchange="loadImg()">

                <label for="fotoperfil">
                    <img id="preview" src="<%= arquivo.imagem %>">
                </label>
                
                <label for="nomeed">Nome de usuário</label>
                <input type="text" name="nomeed" id="nomeed" value="<%=autenticado.user%>">

                <label for="apelidoed">Apelido</label>
                <input type="text" name="apelidoed" id="apelidoed" value="<%=autenticado.nick%>">

                <label for="numeroed">Número de celular</label>
                <input type="number" name="numeroed" id="numeroed" value="<%=autenticado.num%>">

                <!-- <section>
                    <label for="genero" id="gened">Gênero</label>

                    <input type="radio" name="genero" id="masced" value="masculino">
                    <label for="masc">Masculino</label>
                    <input type="radio" name="genero" id="femied" value="feminino">
                    <label for="femi">Feminino</label>
                    <input type="radio" name="genero" id="outroed" value="outro">
                    <label for="outro">Outro</label>
                </section> -->

                <input type="submit" id="entrared" name="entrared" value="Salvar">
            </form>
        </section>
    </main>
    <footer>
        <img src="imagens/logo.svg">
    </footer>
</body>
</html>