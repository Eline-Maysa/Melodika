<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Melodika</title>
    <link rel="stylesheet" href="style/style.css">
    <script src="script/script.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800">
</head>
<body>
    <%
        let arquivo = {"imagem":"imagens/perfil/userico.svg"}

        if(autenticado.img_perfil_pasta != null){
            arquivo.imagem = autenticado.img_perfil_pasta
        }
    %>
    <header id="header">

        <section>
            <a href="/">
                <img src="imagens/logo.svg" alt="Logo">
            </a>
        </section>
    
        <%if (autenticado.id){%>
            <section id="abrenav" onclick="nav()">
                <img id="imgnav" src="<%= arquivo.imagem %>" alt="Menu">    
            </section>
        <% } else { %>
            <section id="abrenav">
                <a href="/login"><img id="imgnav" src="<%= arquivo.imagem %>" alt="Menu"></a>
            </section>
        <%}%>

        <nav id="nav">
            <%
            if(autenticado.tipo == '2'){
            %>
            <a href="/adm" class="adm">Painel administrativo</a>
            <%    
            }
            %>
            <a href="/perfil">Perfil</a>
            <a href="/chats">Chats</a>
            <a href="/perfil">Meus Cursos</a>
            <a href="/cadastrocurso">Cadastrar Curso</a>
            <a href="/filtro">Procurar Curso</a>
            <a class="sair" href="/sair">Sair</a>
            <a class="excluir" href="/excluir">Excluir Perfil</a>
        </nav>

    </header>
    <main>
        <section id="pesqnome">
            <input type="text" id="pesquisanome" name="pesquisanome" placeholder="Pesquisar por nome" onkeypress=""> <!-- IMPORTANTE -->
        </section>

        <section id="filtro">
            <section>
                <select name="instrumento" id="inst">
                    <option value="" disabled selected>Instrumento</option>
                    <optgroup label="Voz">
                        <option value="geral">Geral</option>
                        <option value="soprano">Soprano</option>
                        <option value="mezzosoprano">Mezzosoprano</option>
                        <option value="contralto">Contralto</option>        <!-- IMPORTANTE -->
                        <option value="baixo">Baixo</option>
                        <option value="baritono">Barítono</option>
                        <option value="tenor">Tenor</option>
                    <optgroup label="Cordas" id="cord">

                    </optgroup>
                    <optgroup label="Teclas" id="tecl">

                    </optgroup>
                    <optgroup label="Percussão" id="perc">

                    </optgroup>
                    <optgroup label="Sopro" id="sopr">

                    </optgroup>
                </select>

                <input type="checkbox" name="gratuito" id="gratuito">
                <label for="gratuito" id="grat">Apenas Gratuitos</label>
                <label for="gratuito" id="prec">Faixa de preço</label>
                <section id="filgratuito">
                    <label for="filtropreco1">De:</label>
                    <input type="number" name="filtropreco1" id="filtropreco1" onkeypress="">               <!--IMPORTANTE-->
                    <label for="filtropreco2">Até:</label>
                    <input type="number" name="filtropreco2" id="filtropreco2" onkeypress="">
                </section>

                <input type="checkbox" name="avaliacao" id="avaliacao" onclick="prepara()">
                <label for="avaliacao">Avaliação</label>
                <section id="filavaliacao">
                    <div>                    
                        <img src="imagens/estrelavaz.svg" id="est1">
                    </div>
                    <div>
                        <img src="imagens/estrelavaz.svg" id="est2">
                    </div>
                    <div>
                        <img src="imagens/estrelavaz.svg" id="est3">
                    </div>
                    <div>
                        <img src="imagens/estrelavaz.svg" id="est4">
                    </div>
                    <div>                    
                        <img src="imagens/estrelavaz.svg" id="est5">
                    </div>

                </section> 

                <input type="checkbox" name="data" id="data">
                <label for="data">Data</label>
                <section id="fildata">
                    <select name="instrumento" id="inst">
                        <option value="" disabled selected>Data do upload:</option>
                        <option value="hora">Última hora</option>
                        <option value="hoje">Hoje</option>
                        <option value="semana">Esta semana</option>
                        <option value="mes">Este mês</option>
                        <option value="ano">Este ano</option>
                    </select>
                </section>

                <input type="checkbox" name="qntdalun" id="qntdalun">
                <label for="qntdalun">Quantidade de alunos</label>
                <section id="filqntdalun">
                    <label for="comprasmin">Alunos mínimos</label>
                    <input type="number" name="comprasmin" id="comprasmin">
                </section>
            </section>

            <section id="resultadosfiltro">
            </section>

        </section>
    </main>
    <footer>
        <img src="imagens/logo.svg">
    </footer>
</body>
</html>